{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/hello",
      "dest": "/api/hello.py"
    },
    {
      "src": "/trending-games",
      "dest": "/api/trending-games.py"
    },
    {
      "src": "/top-genres",
      "dest": "/api/top-genres.py"
    },
    {
      "src": "/playtime-insights",
      "dest": "/api/playtime-insights.py"
    },
    {
      "src": "/affordable-games",
      "dest": "/api/affordable-games.py"
    },
    {
      "src": "/top-creators",
      "dest": "/api/top-creators.py"
    },
    {
      "src": "/",
      "dest": "/api/test.py"
    }
  ]
} 